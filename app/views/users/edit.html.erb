<% set_title("Edit user") %>
<h1>Update your profile</h1>

<div class="form-signup">
  <%= form_for(@user) do |f| %>
    <%= render 'fields', f: f %>
    <div class="form-group">
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>    
    </div>
  <% end %>
    
    <%= gravatar_for @user %>
  <a href="http://en.gravatar.com/gravatars/new/" target="_blank">change</a>
</div>
